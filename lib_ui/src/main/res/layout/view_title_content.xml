<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <FrameLayout
            style="@style/style_title_bg"
            android:id="@+id/layout_title_layout">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:minHeight="@dimen/dp_44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/layout_title_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:minWidth="@dimen/dp_42"
                    android:minHeight="@dimen/dp_44"
                    android:scaleType="centerInside"
                    android:src="@mipmap/default_back"/>
            <TextView android:id="@+id/layout_title_text"
                      android:layout_width="wrap_content"
                      android:maxWidth="@dimen/dp_230"
                      android:maxLines="1"
                      android:ellipsize="end"
                      android:layout_height="match_parent"
                      android:textSize="@dimen/sp_15"
                      android:textColor="#ffffff"
                      android:gravity="center"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:text=""/>

            <TextView android:id="@+id/layout_title_right_text"
                      android:visibility="visible"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:maxLines="1"
                      android:ellipsize="end"
                      android:layout_marginRight="@dimen/dp_15"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:gravity="center"
                      android:textColor="#ffffff"
                      android:textSize="@dimen/sp_13"
                      android:minWidth="@dimen/dp_42"
                      android:maxWidth="@dimen/dp_50"
                      android:text=""/>
            <ImageView android:id="@+id/layout_title_right"
                       android:visibility="gone"
                       android:layout_marginRight="@dimen/dp_15"
                       app:layout_constraintRight_toRightOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintLeft_toRightOf="@id/layout_title_right_text"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:minWidth="@dimen/dp_42"
                       android:scaleType="centerInside"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</merge>